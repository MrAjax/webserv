# Deuxième serveur
server {
	listen 18000;
	host localhost;
    server_name Zzewebsite;
	client_max_body_size 5000000;            

    root website_exmpl/Zzewebsite;
    index /index/index.html;
	allow_methods GET	DELETE		POST;

	error_page 404 502 503 /errorpages;

    # Configuration pour les fichiers statiques
    location ~* \.(jpg|jpeg|png|gif|ico|css|js)$ {
    }

}

server {
	listen 18001;
	host localhost;
    server_name simple;
	client_max_body_size 1024;            

    root website_exmpl/Simple;
    index /index.html;
	allow_methods GET	DELETE		POST;

	error_page 404 502 503 /errorpages;

    # Configuration pour les fichiers statiques
    location ~* \.(jpg|jpeg|png|gif|ico|css|js)$ {
    }
}	
# Deuxième serveur
server {
	listen 18003;
	host localhost;
    server_name Hellooo;
	client_max_body_size 5000000;            

    root /website_exmpl/Hellooo;
    index /index.html;
	error_page 404 502 503 /errorpages;
    location / {
		allow_methods GET POST;
		return www.example2.com;
		autoindex on;
		index index.lol;
	}
	location cgi-bin {
      root ./;  
      cgi_path /usr/bin/python3 /bin/bash;
      cgi_ext .py .sh;                   
	}
}
server{
	listen 18005;
	host 127.0.0.1;
    server_name news.com;
	client_max_body_size 1024;            

    root /website_exmpl/news.com;
    index /index.html;

	error_page 404 502 503 /errorpages;
    location / {
		allow_methods GET POST;
    }
}
