# Deuxi√®me serveur
server {
    listen 18000;
	host 127.0.0.1;
    server_name www.monsite2.com;

    root /var/www/monsite2;
    index index.html;

    location / {
        try_files $uri $uri/ =404;
    }

    # Configuration pour les fichiers statiques
    location ~* \.(jpg|jpeg|png|gif|ico|css|js)$ {
        expires 30d;
    }
}

# Premier serveur
server {
    listen 18000;
	host 127.0.0.1;
    server_name www.monsite1.com;

    root /var/www/monsite1;
    index index.html;

    location / {
        try_files $uri $uri/ =404;
    }

    # Configuration pour les fichiers statiques
    location ~* \.(jpg|jpeg|png|gif|ico|css|js)$ {
        expires 30d;
    }
}


